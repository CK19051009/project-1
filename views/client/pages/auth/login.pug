extends ../../layouts/auth.pug

block main 
    div(class="w-full h-full flex items-center justify-center fixed")
        div(class="insert-0 fixed z-[1000] ")
            div(class="")
                div(class="md:text-[40px] text-[34px] font-[800] md:font-[800] text-[#363636] text-center mb-[20px]") ĐĂNG NHẬP TÀI KHOẢN
                form(action=`/auth/login`, class="md:w-[500px] sm:w-[300px] w-[280px]" method="POST")
                    div(class="")
                        label(for="email" class="md:text-[18px] text-[16px] font-[500] text-[#363636]") Email:
                        input(type="email" id="email" required name= "email" class="w-full h-[50px]  border-[2px] border-[#131111] pl-[10px] outline-none rounded-[10px] mt-[10px]" )
                    div(class="mt-[20px]")
                        label(for="password" class="md:text-[18px] text-[16px] font-[500] text-[#363636]") Password:
                        input(type="password" id="password" required name="password" class="w-full h-[50px] border-[2px] pl-[10px] border-[#131111] outline-none rounded-[10px] mt-[10px] ")
                    div(class="mt-[6px]")
                        a(href="/auth/password/forgot")
                            span(class="text-[16px] font-[450] hover:underline text-[#2626e8]")  Quên mật khẩu
                    div(class="mt-[20px]")
                        button(class="w-[500px] h-[50px]  border-[2px] md:text-[18px] text-[16px] font-[500] text-[white] outline-none rounded-[10px] bg-[#2626e8]") Đăng nhập
